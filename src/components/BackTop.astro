  }
</style>

<script>
  import { gsap } from "gsap";

  let top = document.querySelector("#top") as any;
  top.addEventListener("click", function () {
    document.body.scrollTop = 0;
    document.documentElement.scrollTop = 0;
  });

  const arrowLeft = document.querySelector(".arrow-left");
  const arrowRight = document.querySelector(".arrow-right");

  const arrowLeft2 = document.querySelector(".arrow-left-2");
  const arrowRight2 = document.querySelector(".arrow-right-2");

  const arrows = [arrowLeft, arrowRight];
  const arrows2 = [arrowLeft2, arrowRight2];

  arrows.forEach((arrow) => {
    top.addEventListener("mouseenter", () => {
      gsap.fromTo(
        arrow,
        { y: 0 },
        { y: -100, duration: 0.3, ease: "sine.inOut", display: "block" }
      );
    });

    top.addEventListener("mouseleave", () => {
      gsap.fromTo(
        arrow,
        { y: -100 },
        { y: 0, duration: 0, ease: "sine.inOut", display: "none" }
      );
    });
  });

  arrows2.forEach((arrow) => {
    top.addEventListener("mouseenter", () => {
      gsap.fromTo(
        arrow,
        { y: 100 },
        { y: 0, duration: 1, ease: "sine.inOut", display: "block" }
      );
    });
  });
</script>
