<style>
  @import url("https://fonts.cdnfonts.com/css/satoshi");

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  #top {
    position: absolute;
    background: #0afc04;
    width: 98.5%;
    border-radius: 20px;
    border: 1px solid;
    height: 50px;
    cursor: pointer;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .arrow-left,
