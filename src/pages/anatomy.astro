<Layout title="Anatomy of a Fall">
  <main>
    <div class="container">
      <div class="nav">
        <a href="/" class="nav-logo">Go Back</a>
        <div class="nav-links">
          <a href="https://www.youtube.com/watch?v=fTrsp5BMloA" target="_blank"
            >Trailer</a
          >
          <a
            href="https://www.amazon.com/-/es/gp/video/detail/0LBII7SYFQC57ND5PNNQFNJE8E/ref=atv_dp_cnc_0_1"
            target="_blank">Buy</a
          >
          <a href="https://www.imdb.com/title/tt17009710/" target="_blank"
            >IMDb</a
          >
          <a
            href="https://letterboxd.com/film/anatomy-of-a-fall/"
            target="_blank">Letterboxd</a
          >
        </div>
      </div>
      <div class="header">
        <div class="header-left col">
          <div class="item">
            <h1>Anatomy</h1>
            <h1>of a Fall</h1>
          </div>
        </div>
        <div class="header-right col">
